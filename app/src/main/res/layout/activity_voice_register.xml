<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pa.theshapeofvoice.VoiceRegisterActivity">

    <Button
        android:id="@+id/btn_register"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignTop="@+id/et_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="170dp"
        android:background="@drawable/microphone_plus"
        tools:layout_editor_absoluteX="148dp"
        tools:layout_editor_absoluteY="231dp" />

    <EditText
        android:drawableLeft="@drawable/peo"
        android:drawableBottom="@drawable/shape_et_bottom_line"
        android:id="@+id/et_name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:background="@null"
        android:hint="请输入姓名"
        android:textSize="25dp"
        android:gravity="center"
        tools:layout_editor_absoluteX="127dp"
        tools:layout_editor_absoluteY="161dp"
        android:layout_alignParentTop="true"
        android:textColor="@color/colorgod"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btn_register"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:textSize="20dp"
        android:gravity="center"
        android:text="声纹注册"
        android:textColor="@color/colorgod"/>

    <TextView
        android:id="@+id/tv_reg_numb"
        android:drawableLeft="@drawable/com"
        android:drawableBottom="@drawable/shape_et_bottom_line"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:textSize="35dp"
        android:text="123456"
        android:gravity="center"
        android:textColor="@color/colorgod"
        android:layout_below="@+id/et_name"
        android:layout_alignStart="@+id/et_name"
        android:layout_marginTop="20dp"
        android:layout_alignEnd="@+id/et_name" />

</RelativeLayout>
